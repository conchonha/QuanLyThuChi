<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="7dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="7dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:stretchColumns="*">

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Danh Mục:"
                    android:textColor="@color/h383737"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_dialog"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pend" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Số tiền:"
                    android:textColor="@color/h383737"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nhập"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VND"
                    android:textSize="@dimen/font_size_16" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ghi chú:"
                    android:textColor="@color/h383737"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nhập chi tiết"
                    android:inputType="text"
                    android:textSize="@dimen/font_size_14" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:gravity="end">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/h383737"
                    android:gravity="center"
                    android:text="Lưu"
                    android:textAppearance="@style/MyStyle"
                    android:textColor="@color/hfff"
                    android:textSize="@dimen/font_size_16" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/h383737"
                    android:gravity="center"
                    android:text="Huỷ"
                    android:textAppearance="@style/MyStyle"
                    android:textColor="@color/hfff"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>
        </TableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>